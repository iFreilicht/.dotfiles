set $mod Mod1
set $sup Mod4

set $up k
set $left h
set $down j
set $right l

# Color constants for Solarized palette
set $base03        #002b36
set $base02        #073642
set $base01        #586e75
set $base00        #657b83
set $base0         #839496
set $base1         #93a1a1
set $base2         #eee8d5
set $base3         #fdf6e3

set $yellow        #b58900
set $orange        #cb4b16
set $red           #dc322f
set $magenta       #d33682
set $violet        #6c71c4
set $blue          #268bd2
set $cyan          #2aa198
set $green         #859900

exec flock /tmp/monlock ~/.dotfiles/monitorlayout.sh

# Solid background
exec --no-startup-id nitrogen --restore

# Set gap size
gaps inner 10
gaps top 38

# TODO: Find a better way to launch dunst
# Start dunst
exec_always --no-startup-id pkill dunst; sleep 0.1; dunst

# Automatically choose best split (after monitorlayout.sh completed)
exec_always --no-startup-id flock /tmp/monlock sleep 5; ~/.dotfiles/run/i3-alternating-layout/alternating_layouts.py

# Start polybar (after monitorlayout.sh completed)
exec_always --no-startup-id flock /tmp/monlock ~/.config/polybar/launch.sh

# Start compton (and restart if it is already running)
exec_always --no-startup-id pkill picom; sleep 0.1; picom

# Set keyboard layout to US-International
exec setxkbmap us intl

# Run desired autostart programs
exec --no-startup-id sleep 5; dex -as ~/.config/autostart

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
font pango:MesloLGMDZ Nerd Font 9

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $sup

# lock screen. Set kbmap afterwards to work around it resetting after a long time
bindsym $sup+colon exec "xset dpms 1 600 0; i3lock -n -t -i ~/.dotfiles/images/solarized_mountains_1920x1080.png; xset dpms 300 3600 0; setxkbmap us intl"

# Style borders. Wide enough to be resized with mouse
new_window pixel 5

# allow switching back to previous workspace easily
workspace_auto_back_and_forth yes

# start a terminal
bindsym $sup+Return exec terminal

# kill focused window
bindsym $sup+Escape kill

# Show last notification
bindsym $sup+BackSpace exec dunstctl history-pop

# Take screenshot
bindsym Print exec teiler --quick image area

# Start rofi instead of dmenu
bindsym $sup+d exec rofi -show combi
# Window switching with rofi
bindsym $sup+Tab exec rofi -show window
# Emoji picker
bindsym $sup+period exec splatmoji type

# change focus (if it gets more complicated, just use the mouse)
bindsym $mod+Tab exec ~/.config/i3/i3-focus-next.sh

# move focused window
bindsym $sup+$left move left
bindsym $sup+$down move down
bindsym $sup+$up move up
bindsym $sup+$right move right

# split in other orientation
bindsym $sup+v split toggle

# enter fullscreen mode for the focused container
bindsym $sup+f fullscreen

# change container layout (tabbed, toggle split, no need for stacked)
bindsym $sup+w layout tabbed
bindsym $sup+e layout toggle split

# toggle tiling / floating
bindsym $sup+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $sup+space focus mode_toggle

# switch to workspace
bindsym $sup+1 workspace 1
bindsym $sup+2 workspace 2
bindsym $sup+3 workspace 3
bindsym $sup+4 workspace 4
bindsym $sup+5 workspace 5
bindsym $sup+6 workspace 6
bindsym $sup+7 workspace 7
bindsym $sup+8 workspace 8
bindsym $sup+9 workspace 9
bindsym $sup+0 workspace 10

# move focused container to workspace and switch to it to avoid confusion
bindsym $sup+Control+1 move container to workspace 1; workspace 1
bindsym $sup+Control+2 move container to workspace 2; workspace 2
bindsym $sup+Control+3 move container to workspace 3; workspace 3
bindsym $sup+Control+4 move container to workspace 4; workspace 4
bindsym $sup+Control+5 move container to workspace 5; workspace 5
bindsym $sup+Control+6 move container to workspace 6; workspace 6
bindsym $sup+Control+7 move container to workspace 7; workspace 7
bindsym $sup+Control+8 move container to workspace 8; workspace 8
bindsym $sup+Control+9 move container to workspace 9; workspace 9
bindsym $sup+Control+0 move container to workspace 10; workspace 10

# move current workspace to different monitor
bindsym $sup+Control+$left move workspace to output left
bindsym $sup+Control+$down move workspace to output down
bindsym $sup+Control+$up move workspace to output up
bindsym $sup+Control+$right move workspace to output right

# reload the configuration file
bindsym $sup+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $sup+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $sup+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Window decoration colors
# class                 border  backgr. text    indicator
client.focused          $base03 $base03 $base1  $base03
client.focused_inactive $base03 $base03 $base01 $base03
client.unfocused        $base03 $base03 $base01 $base03
client.urgent           $red    $red    $base2  $base2

client.placeholder      #000000 $base03 $base01 #000000
client.background               $base03


# Pulse Audio controls
#increase sound volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1%; exec killall -USR1 i3status
#decrease sound volume 
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1%; exec killall -USR1 i3status
# mute sound
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle; exec killall -USR1 i3status

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec brightnessctl s 5%+ # increase screen brightness
bindsym XF86MonBrightnessDown exec brightnessctl s 5%- # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Window categories
for_window [title="Microsoft Teams Notification"] floating enable; sticky enable
no_focus [title="Microsoft Teams Notification"]

for_window [title="^MEGAsync$"] floating enable; resize set 402 564

# Change default workspace numbers: 3 becomes 7, 2 becomes 4
exec i3-msg "workspace 3, workspace 7, workspace 2, workspace 4, workspace 1"
